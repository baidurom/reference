<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/cell_broadcast"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/cell_broadcast">
        <com.android.phone.CellBroadcastCheckBox android:persistent="false" android:title="@string/cell_broadcast" android:key="enable_cellBroadcast" android:summaryOn="@string/sum_cell_broadcast_control_off" android:summaryOff="@string/sum_cell_broadcast_control_on" />
        <Preference android:persistent="false" android:title="@string/cell_broadcast_settings" android:key="cbsettings" android:summary="@string/sum_cell_broadcast_setting" android:dependency="enable_cellBroadcast">
            <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.CellBroadcastSettings" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>